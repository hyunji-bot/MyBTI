<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#7768EA"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FEA82F"
            android:tint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginBottom="77dp"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:contentDescription="@string/Sample_IMG"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:srcCompat="@mipmap/ppomi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edge"
            android:backgroundTint="#ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="100dp"
                android:layout_marginBottom="150dp"
                android:fontFamily="@font/nexonfootballgothicl"
                android:gravity="center_horizontal"
                android:text="@string/Sample_Titel"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/Start"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="149dp"
                android:background="@drawable/rounded_edge_button"
                android:backgroundTint="#6857E8"
                android:fontFamily="@font/nexonfootballgothicl"
                android:text=">"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>