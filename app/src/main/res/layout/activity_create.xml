<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FE"
    tools:context=".create">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#F4F7FE"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#F4F7FE"
            android:fontFamily="@font/nexonfootballgothicl"
            android:text="테스트 만들기"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_edge"
            android:backgroundTint="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexonfootballgothicl"
                android:text="테스트 이름"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_10dp"
                android:backgroundTint="#F4F7FE"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingHorizontal="20dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexonfootballgothicl"
                android:text="썸네일" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edge_all"
                android:backgroundTint="#F4F7FE"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/button"
                android:layout_width="224dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:background="@drawable/border_button"
                android:backgroundTint="#00FFFF00"
                android:fontFamily="@font/nexonfootballgothicl"
                android:text="이미지 업로드"
                android:textColor="#4318FF" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/button_10dp"
                android:backgroundTint="#4318FF"
                android:fontFamily="@font/nexonfootballgothicl"
                android:text="다음"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>